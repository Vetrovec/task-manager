{
  "private": true,
  "scripts": {
    "format": "npm run format --workspaces --if-present",
    "build:backend": "npm run build --workspace @task-manager/backend",
    "build:frontend": "npm run build --workspace @task-manager/frontend",
    "start:backend": "npm run start --workspace @task-manager/backend",
    "start:frontend": "npm run start --workspace @task-manager/frontend",
    "proxy": "node ./proxy"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "http-proxy": "^1.18.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
